@model IEnumerable<Candidate>

@if(Model.Count()>0)
{
  <h4 class="display-6">
    Applications(@Model.Count())
    </h4>
   
 <table class="table table-hover  table-striped">
    <thead>
        <th>Email</th>
        <th>Full Name</th>
        <th>Apply At</th>
        <th>Course</th>
    </thead>
    <tbody>
        @foreach(Candidate candidate in Model)
        {
            <tr>
                <td>@candidate.Email</td>
                <td>@candidate.FullName</td>
                <td>@candidate.ApplyAt</td>
                <td>@candidate.SelectedCourse</td>

            </tr>
        }
    </tbody>
 </table>
}
else
{
    <div class="alert alert-info">
        Thre is no application. Please click here to
        <a class="alert-link" asp-action="Apply">apply.</a>

    </div>
}