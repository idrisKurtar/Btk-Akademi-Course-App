@model Candidate

<div>
    <div class="display-4">Congratulations @Model.FullName</div>
    <p class="lead">Your applicaiton has been <mark>accepted.</mark></p>
    <p class="lead">Many thanks for your interest</p>
    <hr />
    <blockquote class="blockquote">
        You have enrolled to @Model.SelectedCourse course.
    </blockquote>
    <p class="text-muted">You applied at @Model.ApplyAt.</p>

    <div class="btn-group">
        <a asp-action="Index" class="btn btn-outline-success">Applications</a>
        <a class="btn btn-success" asp-action="Index" asp-controller="Home">Home</a>
    </div>

    
</div>
